{% block css %}
{% endblock %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }} alert alert-warning alert-dismissible fade show d-flex justify-content-center
        align-items-center" role="alert" style="width: 30%; margin-left: 35%;">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <script>
            $(".alert").alert('close')
        </script>
    {% endfor %}
{% endfor %}