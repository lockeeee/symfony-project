{% block css %}
{% endblock %}
<ul class="navbar-nav mr-3">
    <li>
        <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#advancedAddressSearch">
            Wyszukiwanie zaawansowane
        </button>

        <div class="modal fade" id="advancedAddressSearch" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Wyszukiwanie zaawansowane</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="{{ path('asearch_address_result') }}" method="post">
                            <input type='text' class="form-control" name='street' maxlength=30
                                   placeholder="Szukana ulica..."/><br />
                            <input type='text' class="form-control" name='city' maxlength=50
                                   placeholder="Szukane miasto..."/><br />
                            <input type='text' class="form-control" name='country' maxlength=50
                                   placeholder="Szukany kraj..."/><br />
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-info" data-dismiss="modal">Wróć</button>
                                <button type="sumbit" class="btn btn-info">Szukaj</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </li>
</ul>