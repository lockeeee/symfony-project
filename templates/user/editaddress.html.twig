{% extends "base.html.twig" %}
{% block title %} Edytuj {% endblock %}
{% block body %}

    {% include "addressnavbar.html.twig" %}
    {% include "flash.html.twig" %}
    <center>
        <div class="card shadow-sm p-3 mb-5 bg-white rounded" style="width: 40rem;">
            <form action="{{ path('update_address') }}" method="post">

                <br /><h3 class="card-title">Edytuj adres</h3><br />

                <input type='hidden' name='id' value='{{ user.ID }}'>
                <div class="form-row">
                    <div class="col" style="margin: 15px 15px 0px 15px;">
                        <select name="user_id" class="form-control">
                            <option>Wybierz mieszka≈Ñca...</option>
                            {% for user in man %}
                                <option value="{{ user.id }}">
                                    {{ user.name }} {{ user.surname }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col" style="margin: 15px 15px 0px 0px;">
                        <input type='text' class="form-control" name='street' maxlength=50 value="{{ user.street }}"/>
                    </div>
                </div><br />
                <div class="form-row">
                    <div class="col" style="margin: 15px 15px 0px 15px;">
                        <input type='text' class="form-control" name='postnumber' value="{{ user.postnumber }}"/>
                    </div>
                    <div class="col" style="margin: 15px 15px 0px 0px;">
                        <input type='tel' class="form-control" name='city' value="{{ user.city }}"/>
                    </div>
                </div><br />
                <div class="form-row">
                    <div class="col" style="margin: 15px 15px 0px 15px">
                        <input type='tel' class="form-control" name='country' value="{{ user.country }}"/>
                    </div>
                </div><br />
                <center>
                    <input class="btn btn-outline-info" type='submit' value='Edytuj'>
                </center><br />
            </form>
        </div>
    </center>

{% endblock %}